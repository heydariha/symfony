{% extends 'base.html.twig' %}

{% block title %}
	Books of Genre
{% endblock %}

{% block body %}

<div class="container" style='margin-top:20px'>

	<div style="width:100%">
		<div style="margin-left:20px;float:left">
			<a class="btn btn-primary" href="{{ path("home") }}"><i class="icon-book"></i> Books</a>
		</div>
		<div style="margin-right:20px;float:right">
			<a class="btn btn-primary" href="{{ path('fos_user_security_logout') }}"><i class="icon-user"></i> Change User</a>
		</div>
	</div>
	<br><br>
  <h2><i class="icon-fixed-width icon-flag"></i> {{ books[0].gname }}'s Books</h2>
	<div>
		<br>
		<table class="table table-hover">
			<tr>
				<th class="rowTh" >Name</th>
				<th class="rowTh" >Release Date</th>
				<th class="rowTh" >Length</th>
			</tr>
				{% for rel in books[0]['relation'] %}
						<tr>
							<td class='rowTd'>{{ rel.book.bname }}</td>
							<td class='rowTd'>{{ rel.book.breleased | date("m/d/Y")  }}</td>
							<td class='rowTd'>{{ rel.book.blength }}</td>
						</tr>
				{% endfor %}
		</table>
	</div>
</div>
	
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
<style>
	.rowTh{
		text-align:center;
		width:200px;
		height:35px;
		border-bottom:1px gray solid;
	}
	.rowTd{
		text-align:center;
		width:200px;
		height:35px;
		border-bottom:1px gray solid;
	}
</style>
{% endblock %}
